<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="@dimen/profilePicSize"
             android:layout_height="@dimen/profilePicSize"
             android:layout_marginEnd="@dimen/itemPadding">
    <ImageView android:id="@+id/profilePic"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:background="#4488ff"
               tools:src="@drawable/mirtha" />
    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:tint="@color/background"
               android:src="@drawable/profile_circle" />

</FrameLayout>